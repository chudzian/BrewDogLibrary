<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardViewID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="3dp"
        app:cardUseCompatPadding="true">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="10dp"
            android:minHeight="100dp"
            android:paddingBottom="4dp">

            <ImageView
                android:id="@+id/beerImageListID"
                android:layout_width="102dp"
                android:layout_height="134dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@android:drawable/ic_menu_report_image" />

            <TextView
                android:id="@+id/beerNameListID"
                android:layout_width="204dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:text="Beer Name"
                android:textAlignment="textStart"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/beerImageListID"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ibuListID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:text="IBU: 60"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/beerAlcListID"
                app:layout_constraintTop_toBottomOf="@+id/beerNameListID" />

            <TextView
                android:id="@+id/beerAlcListID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:text="Alc: 5%"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/beerImageListID"
                app:layout_constraintTop_toBottomOf="@+id/beerNameListID" />

            <TextView
                android:id="@+id/firstBewwedListID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:text="First Bewed: 04/2009"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/beerImageListID"
                app:layout_constraintTop_toBottomOf="@+id/beerAlcListID" />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>